<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6">
    <%= render 'following_nav' if logged_in? %>
    <% if @following_users.any? %>
      <h3>フォロー (<%= @following_users.count %>)</h3>
      <ol class="microposts">
        <% @following_users.each do |following_user| %>
          <%= render partial: 'following_users/following_user', locals: { following_user: following_user } %>
        <% end %>
      </ol>
    <% end %>
  </div>
  <div class="col-md-2">
    <%= render 'follow_form' if logged_in? %>
  </div>
</div>
